<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Vista de Formulario - Cristhofer Solarte -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Måneskin</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Estilos extra para mejorar la página -->
    <style>
        .comentarios {
            background-color: #333;
            color: white;
            padding: 10px;
            margin-top: 20px;
            margin-bottom: 20px; /* Añadido margen inferior */
        }
        .comentarios li {
            margin-bottom: 10px;
        }
        .comentarios strong {
            font-size: 1.2em;
        }
        footer {
            margin-top: 20px; /* Añadido margen superior */
        }
    </style>
</head>

<body>
    <header>
        <h1>Måneskin</h1>
        <div id="nav">
            <nav>
                <ul>
                    <li><a href="http://localhost:3000/">Inicio</a></li>
                    <li><a href="http://localhost:3000/integrantes/">Integrantes</a></li>
                    <li><a href="http://localhost:3000/historia/">Historia</a></li>
                    <li><a href="http://localhost:3000/discografia/">Discografía</a></li>
                    <li><a href="http://localhost:3000/formulario/">Suscríbete</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="contenedor_formulario"> <!-- Formulario para ingresar usuarios y reseñas -->
        <form action="/formulario/agregar" method="POST">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" placeholder="Escribe tu nombre" required>

            <label for="email">Correo:</label>
            <input type="email" id="email" name="email" placeholder="Escribe tu correo" required>

            <label for="resena">Reseña</label>
            <textarea id="resena" name="resena" placeholder="Déjanos alguna reseña" maxlength="200" required></textarea>

            <input type="submit" value="Enviar">
        </form>
    </section>

    <section class="comentarios"> <!-- Mostrar comentarios ingresados -->
        <h3>Comentarios</h3>
        <ul>
            <% usuarios.forEach(usuario => { %>
                <li>
                    <strong><%= usuario.Nombre %></strong><br>
                    <div style="background-color: #444; padding: 5px; margin-top: 5px;">
                        <%= usuario.Reseña %>
                    </div>
                </li>
            <% }); %>
        </ul>
    </section>

    <footer>
        <p>Verónica Parra 30.600.365<br>Cristhofer Solarte 30.959.561<br>&copy; 2024 Frontend.</p>
    </footer>
</body>
</html>